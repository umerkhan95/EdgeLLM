# Mojo Gateway Configuration
# Copy this file to .env and customize for your environment

# ===== Server Configuration =====
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8080

# ===== Security =====
# IMPORTANT: Change this in production!
JWT_SECRET=your-secret-key-change-in-production

# ===== Model Configuration =====
# HuggingFace model ID or local path
MODEL_PATH=meta-llama/Llama-3.1-8B-Instruct

# ===== Rate Limiting =====
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=3600

# ===== Logging =====
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===== Optional: Database (for persistent logging) =====
POSTGRES_USER=gateway
POSTGRES_PASSWORD=gateway_password
POSTGRES_DB=gateway_logs
DATABASE_URL=postgresql://gateway:gateway_password@localhost:5432/gateway_logs

# ===== Optional: Redis (for distributed rate limiting) =====
REDIS_URL=redis://localhost:6379

# ===== Optional: Monitoring =====
GRAFANA_PASSWORD=admin
ENABLE_METRICS=true

# ===== GPU Configuration =====
# Set to device ID (0, 1, etc.) or "all" for multi-GPU
CUDA_VISIBLE_DEVICES=0
